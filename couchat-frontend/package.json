{
  "name": "couchat-frontend",
  "private": true,
  "version": "0.1.0",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:start": "cross-env NODE_ENV=production electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "package": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.couchat.app",
    "productName": "CouChat",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "electron-preload.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../target/couchat-1.0-SNAPSHOT.jar",
        "to": "backend/couchat-1.0-SNAPSHOT.jar",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/vite.svg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/vite.svg"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release_builds"
    },
    "asarUnpack": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "CouChat Uninstall"
    }
  }
}
